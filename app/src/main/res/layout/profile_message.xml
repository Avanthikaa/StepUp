<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        >

        <TextView
            android:id="@+id/profileUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/postImageTextUserImage"
            android:text="Varun Ranganathan"
            android:textColor="#444"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/profileMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/postImageTextUserName"
            android:text="Hello!"
            />

        <ImageView
            android:id="@+id/profileMessageImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/postImageTextDescription"
            android:layout_marginTop="1dp"
            android:layout_centerHorizontal="true"
            />

    </LinearLayout>
</android.support.v7.widget.CardView>