<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/postImageUserImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/postImageUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/postImageUserImage"
            android:text="Varun Ranganathan"
            android:textColor="#444"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/postImageDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/postImageUserImage"
            android:layout_marginTop="1dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/forest"
            />

        <TextView
            android:id="@+id/postImageDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/postImageUserName"
            android:layout_below="@+id/postImageUserName"
            android:layout_marginRight="10dp"
            android:text="Dec 9 at 15:34"
            android:textSize="13sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>